---
import BaseHead from '@/components/BaseHead'
import Header from '@/components/Header'
import Footer from '@/components/Footer'
import ProviderTheme from '@/components/ProviderTheme'
import ProviderAnimations from '@/components/ProviderAnimations'
import TwSizeIndicator from '@/components/TwSizeIndicator'
import { ViewTransitions } from 'astro:transitions'
const { title, description, image, articleDate } = Astro.props
---

<html lang='en' class='scroll-smooth'>
	<head>
		<BaseHead title={title} description={description} ogImage={image} articleDate={articleDate} />
		<ProviderTheme />
		<ProviderAnimations />
		<ViewTransitions />
		<!-- Google Tag Manager -->
		<script>
			setTimeout(function () {
				;(function (w, d, s, l, i) {
					w[l] = w[l] || []
					w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' })
					var f = d.getElementsByTagName(s)[0],
						j = d.createElement(s),
						dl = l != 'dataLayer' ? '&l=' + l : ''
					j.async = true
					j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl
					f.parentNode.insertBefore(j, f)
				})(window, document, 'script', 'dataLayer', 'GTM-MDC575K')
			}, 2000)
		</script>
		<!-- End Google Tag Manager -->
	</head>

	<body class='bg-white text-stone-950 dark:bg-gray-800 dark:text-white'>
		<!-- Google Tag Manager (noscript) -->
		<noscript>
			<iframe
				src='https://www.googletagmanager.com/ns.html?id=GTM-MDC575K'
				height='0'
				width='0'
				style='display:none;visibility:hidden'></iframe>
		</noscript>
		<!-- End Google Tag Manager (noscript) -->
		<main class='sm:mx-auto antialiased grid gap-12 overflow-hidden md:overflow-visible'>
			<Header />
			<slot />
		</main>
		<Footer />
		<TwSizeIndicator />
	</body>
</html>
