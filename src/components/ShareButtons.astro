---
import VkIcon from './VkIcon.astro'
import TgIcon from './TgIcon.astro'
import VbIcon from './VbIcon.astro'
import WtspIcon from './WtspIcon.astro'
import FbIcon from './FbIcon.astro'
import TwIcon from './TwIcon.astro'

const { urlSeo, titlePage, headImg, descriptionPage } = Astro.props
---

<div class='drop-shadow-md'>
	<div class='mx-6 my-2 flex flex-row tooltip tooltip-bottom' data-tip='Репостни меня 👍🚀'>
		<a
			href={`http://vk.com/share.php?url=https://samogoncalc.ru/${urlSeo}&title=${titlePage}&image=https://samogoncalc.ru${headImg}&noparse=true`}
			class={`hover:shadow-lg m-1 p-2 rounded-full bg-cyan-800`}
		>
			<VkIcon />
		</a>
		<a
			href={`https://t.me/share/url?url=https://samogoncalc.ru/${urlSeo}&text=${titlePage}`}
			class='bg-cyan-500 hover:shadow-lg m-1 p-2 rounded-full'
		>
			<TgIcon />
		</a>
		<a
			href={`viber://forward?text=https://samogoncalc.ru/${urlSeo} | ${titlePage}`}
			class='bg-purple-800 hover:shadow-lg m-1 p-2 rounded-full'
		>
			<VbIcon />
		</a>
		<a
			href={`whatsapp://send?text=${titlePage} | https://samogoncalc.ru/${urlSeo}`}
			class='bg-[#25D366] hover:shadow-lg m-1 p-2 rounded-full'
		>
			<WtspIcon />
		</a>
		<a
			href={`http://www.fb.com/sharer.php?s=100&p[title]=${titlePage}&p[summary]=${descriptionPage}&p[url]=https://samogoncalc.ru/${urlSeo}&p[images][0]=https://samogoncalc.ru${headImg}`}
			class='bg-indigo-900 hover:shadow-lg m-1 p-2 rounded-full'
		>
			<FbIcon />
		</a>
		<a
			href={`https://twitter.com/intent/tweet?original_referer=https://samogoncalc.ru/${urlSeo}&text=${titlePage}&url=https://samogoncalc.ru`}
			class='bg-blue-500 hover:shadow-lg m-1 p-2 rounded-full'
		>
			<TwIcon />
		</a>
	</div>
</div>
