---
import { Image } from 'astro:assets'
import ArrowUp from '@/components/icons/ArrowUp'

const {
	id,
	data: { title, description, heroImage },
	slug
} = Astro.props
---

<article class='m-4 p-2 border-spacing-1 hover:shadow-2xl rounded-xl bg-gray-100 dark:bg-gray-700'>
	<a class='relative overflow-hidden' href={`/${slug}/`}>
		<div class='text-center hover:bg-[#1abc9c] hover:rounded-lg'>
			<Image
				src={heroImage}
				width={360}
				height={360}
				format='webp'
				quality='mid'
				alt={`img of ${title}`}
			/>
		</div>
		<div class='mb-3 text-center leading-[1.2rem] dark:text-white font-[700] text-gray-700'>
			{title}
		</div>
		<div class='text-center leading-[1.2rem] font-[400] dark:text-white text-sm text-gray-800'>
			{description}
		</div>
	</a>
</article>

<script>
	import { animate } from 'motion'

	const images = document.querySelectorAll('img')

	document.addEventListener('DOMContentLoaded', function () {
		const showAnimations = localStorage.getItem('animations') === 'true'

		if (showAnimations) {
			animate(
				'.effect',
				{
					opacity: [0, 1],
					clipPath: ['circle(0% at 0% 0%)', 'circle(100% at 50% 50%)']
				},
				{ duration: 2, easing: 'ease' }
			)
		} else {
			images.forEach((img) => {
				img.classList.remove('opacity-0')
			})
		}
	})
</script>
