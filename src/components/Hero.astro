---
import { Image } from 'astro:assets'
import ShareButtons from '@/components/ShareButtons'

const { headImg, titlePage, descriptionPage, urlSeo } = Astro.props
---

<div class='h-auto w-full bg-[#1ABC9C] flex items-center justify-center'>
	<div class='px-5 sm:px-8 lg:px-0'>
		<div class='pt-4 flex justify-center mb-12 mt-32 md:mt-40 md:mb-24'>
			<Image src={headImg} alt={titlePage} loading='eager' width={240} height={240} />
		</div>
		<div
			class='flex drop-shadow-md justify-center uppercase max-w-6xl text-center text-2xl md:text-5xl text-white font-[700]'
		>
			<span class='bg-[#00614B] py-2 px-4'>{titlePage}</span>
		</div>
		<div
			class='pt-8 drop-shadow-md px-4 flex justify-center max-w-6xl text-xl text-center md:text-2xl text-white font-[300]'
		>
			<span class='bg-[#00614B] py-2 px-4'>{descriptionPage}</span>
		</div>
		<div
			class='pt-6 px-4 flex justify-center max-w-6xl text-xl text-center md:text-2xl text-white font-[300]'
		>
			<div class='animate-bounce h-8 mt-10'>
				<div class='my-auto h-1 w-10 bg-white border rounded'></div>
			</div>
			<ShareButtons
				urlSeo={urlSeo}
				titlePage={titlePage}
				headImg={headImg}
				descriptionPage={descriptionPage}
			/>
			<div class='animate-bounce h-8 mt-10'>
				<div class='my-auto h-1 w-10 bg-white border rounded'></div>
			</div>
		</div>
		<div class='p-8 mb-6 mt-16 flex justify-center text-xl md:text-2xl text-white'>
			{
				urlSeo && (
					<div class='border-top bg-[#00614B] py-2 px-4'>
						<a href='/' class='text-white drop-shadow-md'>
							Главная
						</a>
						/ {titlePage}
					</div>
				)
			}
		</div>
	</div>
</div>
