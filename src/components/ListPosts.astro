---
import type { CollectionEntry } from 'astro:content'
import PostCard from '@/components/PostCard'
import { cn } from '@/utils'
import Ad1L from './Ad1L.astro'

type Props = {
	posts: CollectionEntry<'blog'>[]
	FirstBig?: boolean
}

const { posts, FirstBig = false } = Astro.props
---

<section
	class={cn(
		`grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3  gap-8 mt-3`,
		FirstBig && `md:[&>*:first-child]:col-span-2`
	)}
>
	{
		posts.map(async (post, index) => {
			const { remarkPluginFrontmatter } = await post.render()

			return (
				<>
					{post.data.status && (
						<PostCard
							id={post.id}
							data={post.data}
							slug={post.slug}
							readTime={remarkPluginFrontmatter.minutesRead}
						/>
					)}
					{(index + 1) % 3 === 0 && (
						<div class='grid grid-rows-[300px_auto] md:grid-rows-[300px_220px] min-h-full group rounded-xl'>
							<Ad1L />
						</div>
					)}
				</>
			)
		})
	}
</section>
