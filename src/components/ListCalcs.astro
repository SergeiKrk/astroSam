---
import type { CollectionEntry } from 'astro:content'
import CalcCard from '@/components/CalcCard'
import StarIcon from '../components/icons/StarIcon.astro'

type Props = {
	calcs: CollectionEntry<'calcs'>[]
}

const { calcs } = Astro.props
---

<div class='my-10 mx-4 2xl:mx-52 2xl:my-24'>
	<div
		class='flex justify-center uppercase text-lg text-center dark:text-white sm:text-4xl text-gray-700 font-[700]'
	>
		ПОЛЕЗНЫЕ КАЛЬКУЛЯТОРЫ ДЛЯ ВИНОКУРОВ И САМОГОНЩИКОВ
	</div>
	<div class='my-6 sm:my-10 flex justify-center text-xl sm:text-4xl text-gray-700 font-[700]'>
		<div class='my-auto h-[4px] w-32 bg-gray-700 border-gray-700 rounded'></div>
		<div class='mx-6 dark:text-white'>
			<StarIcon />
		</div>
		<div class='my-auto h-[4px] w-32 bg-gray-700 border-gray-700 rounded'></div>
	</div>
	<section class='grid 2xl:grid-cols-6 lg:grid-cols-5 md:grid-cols-4 sm:grid-cols-3 grid-cols-2'>
		{
			calcs.map(async (calc) => {
				return <CalcCard id={calc.id} data={calc.data} slug={calc.slug} />
			})
		}
	</section>
</div>
