---
export interface Props {
	tag: string
}
const { tag } = Astro.props
---

<a href={`/tags/${tag.toLowerCase()}`} aria-label={tag}>
	<span
		class='border-2 border-black font-semibold text-black dark:bg-indigo-900 dark:text-white text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-2xl'
	>
		{tag ?? 'Blog Tag'}
	</span>
</a>
