---
import { Image } from 'astro:assets'
import FormattedDate from '@/components/FormattedDate'
import ArrowUp from '@/components/icons/ArrowUp'

const {
	id,
	data: { title, description, pubDate, heroImage, category },
	readTime,
	slug
} = Astro.props
---

<article class='grid grid-rows-[300px_auto] md:grid-rows-[300px_220px] min-h-full group'>
	<a class='relative overflow-hidden' href={`/post/${slug}/`}>
		<Image
			src={heroImage}
			width={600}
			height={200}
			transition:name={`img${title}`}
			format='webp'
			quality='mid'
			class='h-full min-w-full object-cover hover:scale-[120%] transition-all duration-200 rounded-2xl'
			alt={`img of ${title}`}
		/>
	</a>

	<a href={`/post/${slug}/`} class='md:gap-0 py-6 px-3'>
		<div class='flex flex-col gap-2'>
			<div class='text-2xl font-semibold -tracking-wider'>
				{title}
			</div>
		</div>

		<p class='mt-4 overflow-hidden line-clamp-3 text-gray-700 dark:text-white mb-5 font-[400]'>
			{description}
		</p>
	</a>
</article>

<script>
	import { animate } from 'motion'

	const images = document.querySelectorAll('img')

	document.addEventListener('DOMContentLoaded', function () {
		const showAnimations = localStorage.getItem('animations') === 'true'

		if (showAnimations) {
			animate(
				'.effect',
				{
					opacity: [0, 1],
					clipPath: ['circle(0% at 0% 0%)', 'circle(100% at 50% 50%)']
				},
				{ duration: 2, easing: 'ease' }
			)
		} else {
			images.forEach((img) => {
				img.classList.remove('opacity-0')
			})
		}
	})
</script>
